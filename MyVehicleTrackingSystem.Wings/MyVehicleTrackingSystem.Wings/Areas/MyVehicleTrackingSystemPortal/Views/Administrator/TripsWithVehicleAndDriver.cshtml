@model MyVehicleTrackingSystem.Wings.Models.TripCommonViewModel

@{
    ViewBag.Title = "TripsWithVehicleAndDriver";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row well margin-top-20 create-forms">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <fieldset class="scheduler-border">
        <legend class="scheduler-border">Vehicle List</legend>
        <table class="table table-bordered">
            <tr>
                <th>
                    @*<input type="checkbox" id="checkAll" />*@
                </th>
                <th>
                    @Html.DisplayName("Vehicle Number")
                </th>
                <th>
                    @Html.DisplayName("Availability")
                </th>

            </tr>
            @foreach (var item in Model.VehicleList)
            {
                <tr>
                    <td>
                        @*<input type="checkbox" name="vehiclesToUpdate" id="vehiclesToUpdate" value="@item.VehicleId" />*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleNumber)
                    </td>
                    <td>
                        @if (item.IsAvailable.Equals(true))
                        {
                            @Html.DisplayName("Available")
                        }
                    </td>
                </tr>
            }
        </table>
    </fieldset>
</div>
<div class="row well margin-top-20 create-forms">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <fieldset class="scheduler-border">
        <legend class="scheduler-border">Driver List</legend>
        <table class="table table-bordered">
            <tr>
                <th>
                    @*<input type="checkbox" id="checkAll" />*@
                </th>
                <th>
                    @Html.DisplayName("Driver Name")
                </th>
                <th>
                    @Html.DisplayName("Availability")
                </th>

            </tr>
            @foreach (var item in Model.DriverList)
            {
                <tr>
                    <td>
                        @*<input type="checkbox" name="driversToUpdate" id="driversToUpdate" value="@item.DriverId" />*@
                    </td>
                    <td>
                        @item.FirstName @item.LastName
                    </td>
                    <td>
                        @if (item.IsAvailable.Equals(true))
                        {
                            @Html.DisplayName("Available")
                        }
                    </td>
                </tr>
            }
        </table>
    </fieldset>
</div>







