@using Microsoft.AspNet.Identity
@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { area = "", id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            @if (User.Identity.Name != null && Session["FirstName"] != null && Session["LastName"] != null )
            {
                <li>
                    <span style="font-weight: 400;position:relative; top:20px;color:#6e1179;font-family: -apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,'Noto Sans',Ubuntu,'Droid Sans','Helvetica Neue',sans-serif;" class="" value="">Logged as @Session["FirstName"].ToString() @Session["LastName"].ToString() </span>
                </li>
                <li>
                    <a style="font-weight: 400;margin: 0px 0px 0px 30px;color:#6e1179;font-family: -apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,'Noto Sans',Ubuntu,'Droid Sans','Helvetica Neue',sans-serif;" href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out fa-lg" aria-hidden="true"></i> Logout</a>
                </li>
            }
        </ul>
    }
}
