@model Hypercent.Wings.Models.HelperViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Edit", "Helper", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <br />
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">

            <div class="well margin-top-20 create-forms">
                <div class="form-horizontal">
                    <div class="formtitle row remove-margin form-heading">
                        <div class="form-icon light-blue col-xs-2"><i class="fa fa-user-plus"></i></div>
                        <div class="text-light-blue col-xs-10">Edit Porter Information</div>
                    </div>
                    <div class="col-md-6">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.EPFNumber, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.EPFNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.EPFNumber, "", new { @class = "text-danger", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.NIC, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.NIC, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NIC, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <div id="datepicker" class="input-group date reg-date" data-date-format="yyyy-MM-dd">
                                    <input class="form-control" name="DateOfBirth" id="DateOfBirth" type="text" value="@Model.DateOfBirth.ToString("yyyy-MMMM-dd")" />
                                    @*@Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })*@
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                                @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                            </div>
                        </div>                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.ResidentAddress, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.ResidentAddress, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ResidentAddress, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.PhoneNumber1, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.PhoneNumber1, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber1, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PhoneNumber2, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.PhoneNumber2, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber2, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.BasicSalary, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.BasicSalary, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.BasicSalary, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MinimumSalary, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.MinimumSalary, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MinimumSalary, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PoliceReportExpiryDate, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <div id="datepicker" class="input-group date exp-date" data-date-format="yyyy-MM-dd">
                                    <input class="form-control" name="PoliceReportExpiryDate" id="PoliceReportExpiryDate" type="text" value="@Model.PoliceReportExpiryDate.ToString("yyyy-MMMM-dd")" />
                                    @*@Html.EditorFor(model => model.PoliceReportExpiryDate, new { htmlAttributes = new { @class = "form-control" } })*@
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                                @Html.ValidationMessageFor(model => model.PoliceReportExpiryDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.StartDateOfWork, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <div id="datepicker" class="input-group date reg-date" data-date-format="yyyy-MM-dd">
                                    <input class="form-control" name="StartDateOfWork" id="startDateOfWork" type="text" value="@Model.StartDateOfWork.ToString("yyyy-MMMM-dd")" />
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                                @Html.ValidationMessageFor(model => model.StartDateOfWork, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PeriodOfService, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.PeriodOfService, new { htmlAttributes = new { @class = "date1 form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.PeriodOfService, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="text-center">
                                @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-info btn-raised" })
                                <input type="submit" value="SAVE PORTER" class="btn btn-default btn-raised" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row remove-margin clearfix">

                </div>
            </div>
        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        // $(":file").filestyle({ buttonName: "btn-primary" });
        $(":file").filestyle({ input: false, buttonName: "btn-primary btn-raised", size: "sm" });
