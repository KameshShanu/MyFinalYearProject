@model Hypercent.Wings.Models.AdvertisementCategoryViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Advertisement", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row well margin-top-20 create-forms">
        <div class="form-horizontal">
            <div class="row remove-margin form-heading">
                <div class="form-icon pink col-xs-2"><i class="fa fa-building-o"></i></div>
                <div class="text-pink col-xs-10">Corporate Details</div>
            </div>
            @if (ViewData["Success"] != null)
                {
                <span class="success-msg margin-top-bottom-30" style="color:forestgreen"> @ViewData["Success"].ToString() </span>
            }
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UploadFile, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="UploadFile" id="UploadFile" class="filestyle " data-buttonName="btn-primary" data-size="sm" />
                    @Html.ValidationMessageFor(model => model.UploadFile, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row remove-margin clearfix">
                <div class="text-center">
                    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-info btn-raised" })
                    <input type="submit" id="submit" name="button" value="SAVE Advertisement" class="btn btn-info btn-raised" />
                    <input type="submit" id="submit" name="button" value="SAVE & ADD NEW Advertisement" class="btn btn-info btn-raised" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        // $(":file").filestyle({ buttonName: "btn-primary" });
        $(":file").filestyle({ input: false, buttonName: "btn-primary btn-raised", size: "sm" });
    </script>
}
