@model Hypercent.Wings.Models.CorporateViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row well margin-top-20 create-forms">
        <div class="form-horizontal">
            <div class="row remove-margin form-heading">
                <div class="form-icon pink col-xs-2"><i class="fa fa-building-o"></i></div>
                <div class="text-pink col-xs-10">Corporate Details</div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.CorporateName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.HiddenFor(model=>model.CorporateId)
                    @Html.EditorFor(model => model.CorporateName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CorporateName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CorporateDetails, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CorporateDetails, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CorporateDetails, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row remove-margin clearfix">
                <div class="text-center">
                    @Html.ActionLink("Back", "Index", "", new { @class = "btn btn-info btn-raised" })
                    <input type="submit" id="submit" name="button" value="SAVE Corporate" class="btnSubmit btn btn-info btn-raised" />
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
