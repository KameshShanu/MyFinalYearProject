@model Hypercent.Wings.Models.TripViewModel

@{
    ViewBag.Title = "InvoicePreview";
    Layout = null;
}
@Styles.Render("~/Content/css")
@Styles.Render("~/Content/bootstrap")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<link href="~/Content/CustomStyleWings.css" rel="stylesheet" />
<link rel='stylesheet' type='text/css' href='~/Content/InvoiceStyle.css' />
<link rel='stylesheet' type='text/css' href='~/Content/InvoiceStylesPrint.css' media="print" />
<body onload="window.print();">
    <div>

        <label name="VoucherNumber" id="VoucherNumber" style="position:absolute;left:590px;top:24px;font-size:small">@Model.VoucherNumber</label>
        <label name="VehicleNumber" id="VehicleNumber" style="position:absolute;left:590px;top:72px;font-size:small">@Model.VehicleList.VehicleNumber</label>
        <label name="Chauffeur" id="Chauffeur" style="position:absolute;left:590px;top:98px;font-size:small">@Model.DriverList.FirstName @Model.DriverList.LastName</label>

         <label name="TimeOut" id="TimeOut" style="position:absolute;left:644px;top:175px;font-size:xx-small">@Model.TimeOut</label>
  
        <label name="GuestName" id="GuestName" style="position:absolute;left:160px;top:145px;font-size:small">@Model.GuestName</label>
        <label name="RoomNumber" id="RoomNumber" style="position:absolute;left:160px;top:190px;font-size:small">@Model.RoomNumber</label>
        <ul>
            @foreach (var items in Model.PackagesList)
            {
                <li>
                    <label name="PreDefineTripName" id="PreDefineTripName" style="width:300px; position:relative;left:180px;top:215px;font-size:xx-small; word-break:break-all;word-wrap:break-word;">@items.PreDefineTripName</label>
                </li>
            }
        </ul>
        <label name="CurrentMeterReading" id="CurrentMeterReading" style="position:absolute;left:480px;top:170px;font-size:small">@Model.VehicleList.CurrentMeterReading</label>
    </div>
    <div style="position:absolute;top:50px;right:950px">
        @Html.ActionLink("Back", "Index", "Trips", null, new { @class = "btn btn-info noPrint" })
        <a href="javascript:window.print()" class="btn btn-warning noPrint">Print Voucher</a>
    </div>
</body>
