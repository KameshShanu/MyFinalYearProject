@model MyVehicleTrackingSystem.Wings.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <br />
    @Html.AntiForgeryToken()
    <div class="row margin-top-20">
        <div class="col-md-5 well form-horizontal create-forms col-centered">
            <div class="formtitle row remove-margin form-heading">
                <div class="form-icon yellow col-xs-2"><i class="fa fa-key"></i></div>
                <div class="text-yellow col-xs-10">@ViewBag.Title</div>
            </div>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Code)
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div style="text-align:center" class="col-md-12">
                        <input type="submit" class="btn btn-default btn-raised" value="Reset" />
                    </div>
                </div>

              
            </div>
        </div>
                
                }

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
