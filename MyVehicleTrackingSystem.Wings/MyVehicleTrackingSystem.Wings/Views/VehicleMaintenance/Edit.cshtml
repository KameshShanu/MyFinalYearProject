@model MyVehicleTrackingSystem.Wings.Models.VehicleMaintenanceViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Edit", "VehicleMaintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <br />
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-centered col-md-7">

            <div class="well margin-top-20 create-forms">
                <div class="form-horizontal">
                    <div class="formtitle row remove-margin form-heading">
                        <div class="form-icon light-blue col-xs-2"><i class="fa fa-user-plus"></i></div>
                        <div class="text-light-blue col-xs-10">Edit Vehicle Maintenance Information</div>
                    </div>
                    <div class="col-md-12">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Vehicle.VehicleNumber, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Vehicle.VehicleNumber, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.VehicleNumber, "", new { @class = "text-danger"})

                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.DieselLiters, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.DieselLiters, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.DieselLiters, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaintenanceDate, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <div id="datepicker" class="input-group date" data-date-format="dd-MM-yyyy">
                                    <input class="form-control" name="MaintenanceDate" id="MaintenanceDate" type="text" readonly value="@Model.MaintenanceDate.ToString("dd-MMMM-yyyy")" />
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                                @Html.ValidationMessageFor(model => model.MaintenanceDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaintenanceDescription, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.MaintenanceDescription, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MaintenanceDescription, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Cost, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
                            </div>
                        </div><br /><br />
                        <div class="form-group">
                            <div class="text-center">
                                @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-info btn-raised" })
                                <input type="submit" value="SAVE RECORD" class="btn btn-default btn-raised" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row remove-margin clearfix">

                </div>
            </div>
        </div>
    </div>



}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/MyVehicleTracker/VehicleMaintenance/edit.js"></script>
}
