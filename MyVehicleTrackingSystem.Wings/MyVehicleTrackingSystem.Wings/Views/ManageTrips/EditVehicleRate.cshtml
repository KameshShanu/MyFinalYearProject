@model MyVehicleTrackingSystem.Wings.Models.VehicleRateViewModel

@{
    ViewBag.Title = "Edit Vehicle Rates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row margin-top-20">
        <div class="col-md-8 well col-centered create-forms">
            <div class="form-horizontal">
                <div class="formtitle row remove-margin form-heading">
                    <div class="form-icon yellow col-xs-2"><i class="fa fa-usd"></i></div>
                    <div class="text-yellow col-xs-10">Additional Fares</div>
                </div>
                <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.PassengerType, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.PassengerType, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;height:30px", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.PassengerType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.VehicleType, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.VehicleType, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;height:30px", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.VehicleType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Fare Per Km", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.FarePerKm, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;height:30px" } })
                        @Html.ValidationMessageFor(model => model.FarePerKm, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.WaitingChargers, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.WaitingChargers, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;height:30px" } })
                        @Html.ValidationMessageFor(model => model.WaitingChargers, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <br />
                <div class="row remove-margin clearfix">
                    <div class="text-center">
                        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-raised btn-info" })
                        <input type="submit" id="submit" name="button" value="SAVE RATE" class="btn btn-raised btn-default" />
                        <input type="submit" id="submit" name="button" value="SAVE & ADD NEW RATE" class="btn btn-default btn-raised" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
